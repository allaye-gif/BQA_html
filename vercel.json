{
  "version": 2,
  "builds": [
    {
      "src": "dist/index.cjs",
      "use": "@vercel/node" // Déploiement du serveur Express compilé
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/index.cjs"
    },
    {
      "src": "/(.*)",
      "dest": "dist/client/index.html" // Chemin vers le HTML compilé
    }
  ],
  "installCommand": "npm install",
  "buildCommand": "npm run build"
}